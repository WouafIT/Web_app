ErrorDocument 404 /404.html
ErrorDocument 403 /404.html
DirectoryIndex index.php

<IfModule mod_expires.c>
	<FilesMatch "\.(ico|jpe?g|png|gif|css|eot|svg|svgz|ttf|woff)$">
		ExpiresDefault "access plus 1 month"
	</FilesMatch>
	<FilesMatch "\.(js|html)$">
		ExpiresDefault "access plus 1 day"
	</FilesMatch>
</IfModule>

<IfModule mod_headers.c>
	FileETag None
    Header unset ETag
    <FilesMatch "\.(ico|jpe?g|png|gif|css|eot|svg|svgz|ttf|woff)$">
		Header set Cache-Control "public, s-maxage=2592000, max-age=2592000"
	</FilesMatch>
	<FilesMatch "\.(js|html)$">
		Header set Cache-Control "public, s-maxage=2592000, max-age=86400"
	</FilesMatch>
</IfModule>

RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php?%{QUERY_STRING} [L]

